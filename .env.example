# Frontend (Vite)
# Leave VITE_API_BASE_URL empty to use same-origin requests.
VITE_API_BASE_URL=

# Feedback API path (examples: /api/feedback, /api/nps-feedback, /nps-feedback)
VITE_FEEDBACK_PATH=/api/feedback

# Server (Express)
PORT=3000

# If deployed behind a proxy/load balancer (e.g., Vercel/Render), set to 1 so req.ip is correct.
TRUST_PROXY=1

# Feedback retention (days) for local file storage (and optional Neon pruning).
FEEDBACK_RETENTION_DAYS=180

# Neon Data API (optional)
NEON_DATA_API_URL=
NEON_DATA_API_KEY=
NEON_DATA_API_SCHEMA=app

# Optional: enable best-effort retention pruning in Neon (requires a timestamp column, default "created_at")
NEON_FEEDBACK_ENABLE_RETENTION=0
NEON_FEEDBACK_CREATED_AT_COLUMN=created_at

